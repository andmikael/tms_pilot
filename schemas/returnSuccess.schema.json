{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "ordered_routes": {
      "type": "array",
      "description": "List of routes (one for each vehicle)",
      "items": {
          "type":"array",
          "description": "Single route; a list of ordered locations",
          "items": {
              "type": "string",
              "minItems": 1,
              "uniqueItems": true
          }
      },
     "distances": {
          "type": "array",
          "description": "Total distance traveled on each route",
          "items": {
              "type": "integer"
            }
     },
     "durations": {
          "type": "array",
          "description": "Total time traveled on each route",
          "items": {
              "type": "integer"
          }
     }
    }
  },
  "required": ["ordered_routes", "distances", "durations"]
}